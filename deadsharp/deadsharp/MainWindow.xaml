<Window x:Class="deadsharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:deadsharp"
        mc:Ignorable="d"
        Title="Start window" Height="459" Width="322">
    <Grid Background="#FFA9D6DA">
        <Grid.RowDefinitions>
            <RowDefinition Height="91*"/>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="51*"/>
            <RowDefinition Height="77*"/>
            <RowDefinition Height="56*"/>
            <RowDefinition Height="74*"/>
        </Grid.RowDefinitions>
        <Button x:Name="starting" Content="Start new session" Margin="10" Background="#FFA9E885" FontSize="16" Click="Starting_Click"/>
        <Label Content="Here you can set your session up" Margin="10,10,10,13" Grid.Row="1" Foreground="Black" FontSize="18"/>
        <TextBox Margin="10,12,10,10" Grid.Row="5" TextWrapping="Wrap"/>
        <Label Content="Name your session" Margin="10" Grid.Row="4" FontSize="16"/>
        <Button x:Name="choosing" Content="Click here" Margin="10" Grid.Row="3" Background="#FFA9E885" Click="Choosing_Click"/>
        <Label Content="Choose your session type" Margin="10" Grid.Row="2" FontSize="14"/>

    </Grid>
</Window>
