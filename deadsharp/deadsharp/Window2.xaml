<Window x:Name="windoooow" x:Class="deadsharp.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:deadsharp"
        mc:Ignorable="d"
        Title="Работа с сетевыми операциями" Height="450" Width="800" Background="White">
    <Grid Background="White">
        <TabControl>
            <TabItem Header="Nslookup">
                <Grid Background="#FFA9D6DA">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="63*"/>
                        <RowDefinition Height="125*"/>
                        <RowDefinition Height="61*"/>
                        <RowDefinition Height="142*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="158*"/>
                        <ColumnDefinition Width="467*"/>
                        <ColumnDefinition Width="161*"/>
                    </Grid.ColumnDefinitions>
                    <Button Content="Return to the menu" Margin="11,10,10,12" Click="Button_Click_2" Background="#FFA9E885" Grid.Column="2"/>
                    <Label Content="NSLOOKUP" Margin="10" FontSize="22" FontWeight="Bold"/>
                    <Label Content="ARP" Margin="10" Grid.Row="2" FontSize="22" FontWeight="Bold"/>
                </Grid>
            </TabItem>
            <TabItem Header="Ping">
                <Grid Background="#FFA9D6DA">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="61*"/>
                        <RowDefinition Height="66*"/>
                        <RowDefinition Height="70*"/>
                        <RowDefinition Height="194*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="173*"/>
                        <ColumnDefinition Width="44*"/>
                        <ColumnDefinition Width="190*"/>
                        <ColumnDefinition Width="220*"/>
                        <ColumnDefinition Width="159*"/>
                    </Grid.ColumnDefinitions>
                    <Button Content="Return to the menu" Margin="9,10,10,10" Click="Button_Click_2" Background="#FFA9E885" Grid.Column="4"/>
                    <Label Content="Что пингуем:" Margin="10,10,15,10" FontSize="22"/>
                    <TextBox x:Name="pingname" Grid.Column="1" Margin="10" TextWrapping="Wrap" FontSize="22" Grid.ColumnSpan="3"/>
                    <Label Content="Сколько пакетов:" Margin="10,10,12,11" Grid.Row="1" FontSize="22" Grid.ColumnSpan="2"/>
                    <Label Content="Размер пакетов:" Margin="10,10,12,15" Grid.Row="2" FontSize="22" Grid.ColumnSpan="2"/>
                    <TextBox x:Name="pingcnt" Grid.Column="2" Margin="10,10,15,10" Grid.Row="1" TextWrapping="Wrap" FontSize="22"/>
                    <TextBox x:Name="pingsize" Grid.Column="2" Margin="10,14,15,10" Grid.Row="2" TextWrapping="Wrap" FontSize="22"/>
                </Grid>
            </TabItem>
            <TabItem Header="Tracert">
                <Grid Background="#FFA9D6DA">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="58*"/>
                        <RowDefinition Height="333*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="209*"/>
                        <ColumnDefinition Width="53*"/>
                    </Grid.ColumnDefinitions>
                    <Button Content="Return to the menu" Margin="9,10,10,6.594" Click="Button_Click_2" Background="#FFA9E885" Grid.Column="1"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
